@page "/countries"

<h4 class="text-muted">Countries List</h4>

<GenericList IndexList="Countries">
    <Body>
        <table class="table table-striped table-hover smfont">
            <thead>
                <tr>
                    <th>Country Name</th>
                    <th> <a class="btn btn-sm btn-primary" href="/countries/create">Add Country</a></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var country in Countries!)
                {
                    <tr>
                        <td>@country.Name</td>
                        <td>
                            <a href="/countries/edit/@country.Id" class="btn btn-sm btn-warning">Edit</a>
                            <button @onclick=@(() => DeleteAsycn(country)) class="btn btn-sm btn-danger">Del</button>
                        </td>
                        <td></td>
                    </tr>

                }
            </tbody>
        </table>
    </Body>
</GenericList>
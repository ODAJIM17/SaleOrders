@page "/categories"

<h4 class="text-muted">Categories List</h4>

<GenericList IndexList="Categories">
    <Body>
        <table class="table table-striped table-hover smfont">
            <thead>
                <tr>
                    <th>Category Name</th>
                    <th> <a class="btn btn-sm btn-primary" href="/categories/create"><i class="bi bi-plus-circle"></i> Add New</a></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Categories!)
                {
                    <tr>
                        <td>@category.Name</td>
                        <td>
                            <a href="/categories/edit/@category.Id" class="btn btn-sm btn-warning"><i class="bi bi-pencil"></i> Edit</a>
                            <button @onclick=@(() => DeleteAsycn(category)) class="btn btn-sm btn-danger"><i class="bi bi-trash"></i> Del</button>
                        </td>
                        <td></td>
                    </tr>

                }
            </tbody>
        </table>
    </Body>
</GenericList>